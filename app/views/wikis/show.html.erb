<div>
	<h2><%= markdown_to_html @wiki.title %></h2>
	<p><%= markdown_to_html @wiki.body %></p>
</div>

<div>
	<% if policy(@wiki).update? %>
		<%= link_to "Edit", edit_wiki_path, class: "btn btn-success"  %>
		<%= link_to "Delete", wiki_path, method: :delete, data: {confirm: 'Are you sure you want to delete this wiki?'}, class: "btn btn-danger" %>
	<% end %>
</div>
